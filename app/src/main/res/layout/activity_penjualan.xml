<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Penjualan">

  <TextView
      android:id="@+id/sub_penjualan"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="@string/penjualan"
      android:gravity="center"
      android:textStyle="bold"
      android:textSize="35sp"
      android:textColor="@color/white"
      android:paddingBottom="10dp"
      android:background="@drawable/sub_background"
      android:layout_marginTop="30dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:paddingStart="15dp"
      android:paddingEnd="15dp"
      app:layout_constraintTop_toBottomOf="@+id/sub_penjualan"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/toko"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/hijau"
        android:layout_marginStart="7sp"/>

    <EditText
        android:id="@+id/toko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Toko"
        android:background="@drawable/formulir"
        android:hint="@string/labelToko"
        android:inputType="text"
        android:textColorHint="#757575"
        tools:ignore="LabelFor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titip"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/hijau"
        android:layout_marginStart="7sp"/>

    <EditText
        android:id="@+id/titip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="10"
        android:background="@drawable/formulir"
        android:hint="@string/labelTitip"
        android:inputType="number"
        android:textColorHint="#757575"
        tools:ignore="LabelFor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retur"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/hijau"
        android:layout_marginStart="7sp"/>

    <EditText
        android:id="@+id/retur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="0"
        android:background="@drawable/formulir"
        android:hint="@string/labelRetur"
        android:inputType="number"
        android:textColorHint="#757575"
        tools:ignore="LabelFor" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/harga"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/hijau"
        android:layout_marginStart="7sp"/>

    <EditText
        android:id="@+id/harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="5000"
        android:background="@drawable/formulir"
        android:hint="@string/labelHarga"
        android:inputType="number"
        android:textColorHint="#757575"
        tools:ignore="LabelFor" />

  </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>